root = true

[*]
end-of-line = lf
insert_final_newline = true
max_line_length = 80
indent_style = space
indent_size = 4

[*.{js,py}]
charset = utf-8

[*.{{py}]
indent_style = space
indent_size = 4

[*.rst]
indent_style = space
indent_size = 4

[{Makefile, *.mk}]
indent_style = tab
indent_size = 4

[{*.json, *.tex, *.yml}]
indent_style = space
indent_size = 2

[*.txt]
indent_style = space
indent_size = 4
